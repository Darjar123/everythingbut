<div class="blog-comment-user">
  <div class="row">
    <div class="col-md-1 hidden-sm-down pr-0">
      {% if user_picture %}
        {{ user_picture }}
      {% endif %} 
    </div>
    <div class="col-md-11 col-xs-12">
      <div class="comment-block">
        <h6>{{ author }}</h6><strong>{{ comment.created.value|date('d.m.Y')|t  }}</strong>
        <p>{{ content.comment_body }}</p> 
        {{ content.links }}                   
      </div>
    </div>
  </div>
</div>