{% set img = file_url (node.uc_product_image.0.entity.uri.value) %}
{% set img_alt = node.uc_product_image.0.alt %}
<div class="item col-md-2 col-sm-2 col-xs-4">
    <div class="item-inner">
        <div class="prd">
        {% if img %}
            <div class="item-img clearfix">
                <div class="ico-label"></div>
                <a class="product-image have-additional"
                    title="{{ node.getTitle()|t }}"
                    href="{{ url }}">
                    <span class="img-main">
                        <img src="{{ img_uri_131_135 }}" alt="{{ img_alt }}">
                    </span>
                </a>
                <div class="action-bot action123">
                    <div class="wrap-addtocart">
                        {{ content.add_to_cart }}
                    </div>
                </div>
            </div>
        {% endif %}
            <div class="item-info">
                <div class="info-inner">
                    <div class="item-title">
                        <a title="{{ node.getTitle()|t }}"
                            href="{{ url }}">
                        {{ node.getTitle()|slice(0,18)}} </a>
                    </div>
                    <div class="item-price">
                        <div class="price-box">
                            <span class="regular-price">
                                <span class="price">
                                    <span class="price1">{{ content.price }}</span>
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>