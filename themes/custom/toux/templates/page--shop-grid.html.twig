{% include theme_path ~ "/templates/header.html.twig" %}
<div id="no1_content" class="wrap layout-lm">
    <div id="top_main" class="col-md-12">
        {% if page.section %}
            {{ page.section }}
        {% endif %}
    </div>
    <div class="container">
        <div class="row">
            {% if page.sidebar %}
                <div id="no1_left" class="col-md-3 panel_left_sliderbar">
                    <div class="wrap-in">
                        <div class="block block-layered-nav block-layered-nav--no-filters">
                            <div class="block-content toggle-content">
                                <dl id="narrow-by-list">
                                    {{ page.sidebar }}
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
            
            <div id="no1_main" class="col-md-9 col-main shop_main_content">
                <div id="no1_mainmidle">
                    <div class="category-products">
                        <div class="no1-products-container clearfix">
                            <div class="products-grid row style_grid">
                                {% if page.content %}
                                    {{ page.content }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% if page.section_bottom %}
    {{ page.section_bottom }}
{% endif %}
{% include theme_path ~ "/templates/footer.html.twig" %}